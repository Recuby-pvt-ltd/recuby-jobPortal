---
import Layout from "../layouts/Layout.astro";
import Soon from "/soon.mp4";
---

<Layout title="Job portal">
  <div class="black-bg">
    <video autoplay loop> <source src={Soon} type="video/mp4" /></video>
  </div>
</Layout>

<style>
  body,
  html {
    overflow-x: hidden;
    width: 100vw;
    height: 100vh;
  }
  .black-bg {
    display: flex;
    width: 100vw;
    height: 100vh;
    justify-content: center;
    align-items: center;
    background-color: black;
  }
</style>
